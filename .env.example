# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+15551234567

# Default Notification Recipients (comma-separated, used if no project route matches)
NOTIFICATION_NUMBERS=+15559876543,+15551112222

# Project-specific routing (JSON format: {"project-slug": ["+1234567890", "+0987654321"]})
# If a project matches a route, only those numbers receive the SMS
# If no route matches and NOTIFICATION_NUMBERS is set, those numbers receive the SMS
PROJECT_ROUTES={"hcb-mobile":["+15551234567"],"attend":["+15559876543","+15551112222"],"attend-ios":["+15559876543","+15551112222"]}

# Sentry Webhook Secret (optional - for signature verification)
SENTRY_CLIENT_SECRET=your_sentry_client_secret

# Sentry DSN for error logging (optional)
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Server Configuration
PORT=3000
